<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Categorias</h1>
        </div>
        <!-- /.col-lg-12 -->
        <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Categorias
                            <%= link_to new_backoffice_category_path,class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
                                <i class="fa fa-plus"></i>
                            <%end%>    
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">                                 
                                    <thead>
                                    
                                        <tr>
                                            <th>#</th>
                                            <th>Descrição</th>   
                                            <th></th>          
                                        </tr>
                                    </thead>                                   
                                    <tbody>
                                    <%@Categorias.each do |categorias|%>
                                        <tr>
                                            <td><%=categorias.id%></td>
                                            <td><%=categorias.description%></td>
                                            <td style: width= 150px;>
                                                <%= link_to edit_backoffice_category_path(categorias.id), class: "btn btn-warning btn-circle" do %>
                                                    <i class="fa fa-edit"></i>
                                                <% end %>
                                                <button type="button" disabled="disabled" class="btn btn-danger btn-circle"><i class="fa fa-times"></i></button>                                         
                                            </td>
                                        </tr>
                                        <%end%>  
                                    </tbody>                                                                      
                                </table>                               
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
    </div>
    <!-- /.row -->
</div>
<!-- /#page-wrapper -->