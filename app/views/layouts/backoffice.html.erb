<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Escamboapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'backoffice', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'backoffice', 'data-turbolinks-track': 'reload' %>

</head>

<body>
    <div id="wrapper">
      <%= render partial: 'backoffice/dashboard/menu'%>

      <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <%= yield %>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
      </div>
    <!-- /#page-wrapper --> 
    </div>

<% if notice %>
  <script>
    $.notify("<%= notice %>", {position:"top-center"});
  </script>
<% end %>  

